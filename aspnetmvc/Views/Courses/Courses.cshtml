@model IEnumerable<CourseEntity>

<section id="courses-section">
    <div class="container">
        <div class="breadcrumb">
            <a asp-action="Index" asp-controller="Home" class="first-link"><i class="fa-light fa-house"></i> Home</a>
            <i class="fa-light fa-chevrons-right"></i>
            <a asp-action="Courses" asp-controller="Courses">Courses</a>
        </div>
        <div class="courses-top">
            <h1>Courses</h1>
            <form class="search-form">
                <select class="search-dropdown" name="categories">
                    <option value=""></option>
                    <option value="Programming">Programming</option>
                    <option value="Tech">Tech</option>
                </select>
                <input class="searchbar" type="search" />
            </form>
        </div>
        <div id="courses-wrapper">
            @foreach (var course in Model)
            {
                <a asp-action="Details" asp-controller="Courses" asp-route-id="@course.Id" class="single-course-wrapper">
                    <img src="~/images/@course.Imgurl" class="course-img" />
                    <h5 class="course-title">@course.Title</h5>
                    <p class="courses-author">By @course.Author</p>
                    <div class="courses-prices">
                        @if (Convert.ToInt16(course.DiscountPrice) > 0)
                        {
                            <p class="new-price">@course.DiscountPrice</p>
                            <p class="old-price">@course.Price</p>
                        }
                        else
                        {
                            <p class="regular-price">@course.Price</p>
                        }
                    </div>
                    <hr />
                    <div class="courses-time-and-rating">
                        <p><i class="fa-light fa-clock"></i>@course.Hours</p>
                        <p><i class="fa-light fa-thumbs-up"></i> @course.LikesInPercent @course.LikesInNumbers</p>
                    </div>
                    @if (course.IsBestSeller == true)
                    {
                        <div class="absolute best-seller">
                            <p>Best Seller</p>
                        </div>
                    }
                    <button class="courses-save absolute" asp-action="SaveCourse" asp-controller="Courses"><i class="fa-light fa-bookmark"></i></button>
                </a>
            }
        </div>
    </div>

</section>
