@model SignUpViewModel
@{
    ViewData["Title"] = Model.Title;
}

<section id="signup">
    <div class="container">
        <form method="post" asp-controller="Auth" asp-action="SignUp" novalidate>
            <h1>Create Account</h1>
            <p>Already have an account? <a asp-controller="Auth" asp-action="SignIn">Sign in here.</a></p>

            <div class="content">
                <div id="form-firstname" class="input-group">
                    <label asp-for=SignUpForm.FirstName ></label>
                    <span asp-validation-for=SignUpForm.FirstName ></span>             
                    <input asp-for=SignUpForm.FirstName />
                </div>
                <div id="form-lastname" class="input-group">
                    <label asp-for=SignUpForm.LastName></label>
                    <span asp-validation-for=SignUpForm.LastName></span>
                    <input asp-for=SignUpForm.LastName />
                </div>
                <div id="form-email" class="input-group">
                    <label asp-for=SignUpForm.EmailAddress></label>
                    <span asp-validation-for=SignUpForm.EmailAddress></span>
                    <input asp-for=SignUpForm.EmailAddress />
                </div>
                <div id="form-password" class="input-group">
                    <label asp-for=SignUpForm.Password></label>
                    <span asp-validation-for=SignUpForm.Password></span>
                    <input asp-for=SignUpForm.Password />
                </div>
                <div id="form-confirm" class="input-group">
                    <label asp-for=SignUpForm.ConfirmPassword></label>
                    <span asp-validation-for=SignUpForm.ConfirmPassword></span>
                    <input asp-for=SignUpForm.ConfirmPassword />
                </div>
                <div id="form-terms" class="checkbox-group">
                    <input asp-for=SignUpForm.TermsAndConditions/>
                    <label asp-for="SignUpForm.TermsAndConditions">I agree to the <a asp-controller="About" asp-action="Terms">Terms</a> & <a asp-controller="About" asp-action="Conditions">Conditions</a></label>
                    <span asp-validation-for=SignUpForm.TermsAndConditions></span>
                </div>
            </div>


            <button id="form-button" class="btn-theme-s" type="submit">@Model.Title</button>
        </form>
    </div>
</section>